# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/library_volunteer_hub?schema=public&connection_limit=10&pool_timeout=20"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-here-at-least-32-characters"

# Security Configuration
ADMIN_EMAIL="admin@yourdomain.com"
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=20000

# Session Configuration
SESSION_TIMEOUT_HOURS=24
CLEANUP_INTERVAL_HOURS=1

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_AUDIT_LOGGING=true
ENABLE_DATABASE_MONITORING=true

# External Services (if needed)
# SENTRY_DSN="your-sentry-dsn-for-error-monitoring"
# REDIS_URL="redis://localhost:6379"

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=false
BACKUP_RETENTION_DAYS=30